{{>header}}

<div class="d-grid gap-2 col-6 mt-3 mx-auto">
<a class="btn btn-primary" href="/post/create" role="button">Create Post</a>
</div>

<style> img{
    height: 10vh;
    object-fit: contain;
}
</style>

{{#if posts}}

    {{#each posts}}

    {{>post this}}

    <form action="/post/edit/{{this.id}}" method="post">
        <button type="submit">Edit post</button>
    </form>

    <form action="/post/delete/{{this.id}}?_method=DELETE" method="post" onsubmit="return confirm('Are You Sure you want to delete this Post. Action cannot be reverted')">
        <button type="submit">Delete post</button>
    </form>

    {{/each}}

{{else}}
<h1>you have not created any posts</h1>

{{/if}}

{{>footer}}