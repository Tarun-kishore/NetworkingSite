{{>header}}
<main>
            <!-- background image -->
            <div class="bg-image">
                <img src="/image/Background/background1.webp" alt="Background Photo" style="width: 100%; height: 100%;">
            </div>

            <!-- Sign In box -->
            <div class="Box1 container-fluid Invisible">

                <!-- Top section of box containing logo and text -->
                <div class="form-header container-fluid">
                    <div class="form-logo container-fluid">
                        <img src="/image/Logo/colorful.png" alt="Company Logo">
                    </div>
                    <div class="No-Account container-fluid">
                        <p>No account?</p>
                        <p class="SignUp-changer">Sign up</p>
                    </div>
                </div>

                <!-- Middle section of box -->
                <div class="form-SignIn container-fluid">
                    <h1>Sign in</h1>
                </div>

                <!-- last section of box -->
                <div class="form-main container-fluid">
                    <form>
                        <!-- Taking email -->
                        <div class="mb-3 email container-fluid">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="abc@email.com">
                        </div>
                        <!-- Taking password -->
                        <div class="mb-3 passdiv container-fluid">
                            <label for="exampleInputPassword1" class="form-label password">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                            <!-- icon to show password or not -->
                            <i class="fas fa-eye-slash" id="togglePassword"></i>
                        </div>
                        <!-- sign in button -->
                        <button class="pushable" href="">
                            <span class="front">
                              Sign In
                            </span>
                          </button>
                    </form>
                </div>
            </div>

            <!-- Sign Up Box which is currently invisible -->
            <div class="Box2 container-fluid">

                <!-- Top section of box -->
                <div class="form-header container-fluid">
                    <div class="form-logo container-fluid">
                        <img src="Logo/colorful.png" alt="Company Logo">
                    </div>
                    <div class="No-Account container-fluid">
                        <p>Have an account?</p>
                        <p class="SignIn-changer">Sign in</p>
                    </div>
                </div>

                <!-- Middle section of box -->
                <div class="form-SignIn container-fluid">
                    <h1>Sign up</h1>
                </div>

                <!-- Last section of box -->
                <div class="form-main container-fluid">
                    <form>
                        <!-- Taking email -->
                        <div class="mb-3 email container-fluid">
                            <input type="email" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Email Address">
                            <label>Email Address</label>
                        </div>
                        <!-- taking full name -->
                        <div class="mb-3 fullName container-fluid">
                            <input type="text" class="form-control" placeholder="Full Name" aria-label="Full Name">
                            <label>Full Name</label>
                        </div>
                        <!-- Taking username -->
                        <div class="mb-3 username container-fluid">
                            <input type="text" class="form-control" placeholder="Username" aria-label="Username">
                            <label>Username</label>
                        </div>
                        <!-- Taking password -->
                        <div class="mb-3 passdiv container-fluid">
                            <input type="password" class="form-control" id="exampleInputPassword1"
                                placeholder="Password">
                            <label>Password</label>
                            <i class="fas fa-eye-slash" id="togglePassword"></i>
                        </div>
                        <!-- Confirming password -->
                        <div class="mb-3 passdiv container-fluid">
                            <input type="password" class="form-control" id="exampleInputPassword2"
                                placeholder="Confirm Password">
                            <label>Confirm Password</label>
                        </div>
                        <!-- Signup button -->
                        <button class="pushable" href="">
                            <span class="front">Sign Up</span>
                        </button>
                    </form>
                </div>
            </div>

</main>

{{>footer}}