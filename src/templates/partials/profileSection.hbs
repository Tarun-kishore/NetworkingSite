<div id="profile" class="container-md mt-5">

    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">first Name:</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{firstName}}">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Last Name:</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{lastName}}">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Email:</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{email}}">
        </div>
    </div>

    <div class="mb-3 row">
        <form action="/user/update" method="post" class="d-inline mb-2">
            <button type="submit" class="btn btn-primary">Edit Profile</button>
        </form>
        <form action="/user/change" method="post">
            <button type="submit" class="btn btn-secondary mb-3">Change Password</button>
        </form>
        <form action="/user/delete?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this account? This cannot be reversed.');" method="post">
            <button type="submit" class="btn btn-danger ">Delete My Account</button>
        </form>
    </div>

</div>
